<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SubAdmin Management</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
        <link rel="icon" type="image/png" sizes="32x32" href="/bingo-logo.png">
    <style>
          * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
            overflow: hidden;
        }

        .SubAdminList-container {
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            overflow-y: auto;
            height: calc(100vh - 60px);
            background-color: #f8f9fa;
        }

        .SubAdminList-search-container {
            margin-bottom: 20px;
            display: flex;
            gap: 10px;
            position: sticky;
            top: 0;
            background-color: #f8f9fa;
            padding: 10px 0;
            z-index: 10;
        }

        .SubAdminList-search-input {
            flex: 1;
            padding: 10px 15px;
            border-radius: 8px;
            border: 1px solid #dee2e6;
            font-size: 14px;
            transition: all 0.3s ease;
        }

        .SubAdminList-search-input:focus {
            outline: none;
            border-color: #4361ee;
            box-shadow: 0 0 0 3px rgba(67, 97, 238, 0.15);
        }

        .SubAdminList-search-btn {
            padding: 10px 15px;
            background-color: #4361ee;
            color: white;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .SubAdminList-search-btn:hover {
            background-color: #3a56d4;
        }

        .SubAdminList-list-container {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            width: 100%;
            border: 1px solid rgba(0, 0, 0, 0.08);
        }

        .SubAdminList-header {
            font-size: 22px;
            font-weight: 600;
            margin-bottom: 20px;
            color: #212529;
            text-align: center;
            padding-bottom: 10px;
            position: relative;
        }

        .SubAdminList-header::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 60px;
            height: 3px;
            background: linear-gradient(to right, #4361ee, #2ecc71);
            border-radius: 2px;
        }

        .SubAdminList-header i {
            color: #4361ee;
            margin-right: 10px;
        }

        .SubAdminList-card {
            background-color: #ffffff;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            transition: all 0.3s ease;
            border-left: 4px solid #4361ee;
            position: relative;
        }

        .SubAdminList-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        }

        .SubAdminList-info {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 15px;
        }

        .SubAdminList-info-item {
            display: flex;
            flex-direction: column;
        }

        .SubAdminList-info-label {
            font-weight: 500;
            color: #6c757d;
            margin-bottom: 5px;
            font-size: 12px;
            text-transform: uppercase;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .SubAdminList-info-label i {
            font-size: 12px;
            color: #4361ee;
        }

        .SubAdminList-info-value {
            color: #212529;
            font-weight: 500;
            word-break: break-word;
            font-size: 14px;
        }

        .SubAdminList-currency {
            font-weight: 600;
            color: #2ecc71;
        }

        .SubAdminList-state-badge {
            padding: 5px 10px;
            border-radius: 50px;
            font-size: 12px;
            font-weight: 600;
            text-transform: capitalize;
            display: inline-flex;
            align-items: center;
            gap: 5px;
        }

        .SubAdminList-state-badge.active {
            background-color: #e6f7ed;
            color: #2ecc71;
        }

        .SubAdminList-state-badge.suspended {
            background-color: #fef0e6;
            color: #f4a261;
        }

        .SubAdminList-state-badge.none {
            background-color: #f1f3f5;
            color: #6c757d;
        }

        .SubAdminList-actions {
            display: flex;
            justify-content: flex-end;
            gap: 10px;
            margin-top: 15px;
            padding-top: 15px;
            border-top: 1px dashed #dee2e6;
            flex-wrap: wrap;
        }

        .SubAdminList-actions button {
            padding: 8px 12px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-weight: 600;
            color: white;
            display: flex;
            align-items: center;
            gap: 5px;
            transition: all 0.3s ease;
            font-size: 12px;
            flex-grow: 1;
            justify-content: center;
        }

        .SubAdminList-actions button i {
            font-size: 12px;
        }

        .SubAdminList-actions .SubAdminList-delete-btn {
            background-color: #ef233c;
        }

        .SubAdminList-actions .SubAdminList-delete-btn:hover {
            background-color: #dc1c33;
        }

        .SubAdminList-actions .SubAdminList-edit-btn {
            background-color: #4361ee;
        }

        .SubAdminList-actions .SubAdminList-edit-btn:hover {
            background-color: #3a56d4;
        }

        .SubAdminList-actions .SubAdminList-state-btn {
            background-color: #f4a261;
        }

        .SubAdminList-actions .SubAdminList-state-btn:hover {
            background-color: #e89352;
        }

        .SubAdminList-update-form {
            display: none;
            margin-top: 15px;
            padding: 15px;
            border-radius: 8px;
            background-color: rgba(255, 255, 255, 0.9);
            box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.05);
            border: 1px solid rgba(0, 0, 0, 0.08);
        }

        .SubAdminList-update-form.active {
            display: block;
            animation: SubAdminList-fadeIn 0.3s ease;
        }

        @keyframes SubAdminList-fadeIn {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .SubAdminList-form-row {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .SubAdminList-form-group {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .SubAdminList-form-group label {
            font-weight: 600;
            color: #343a40;
            font-size: 13px;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .SubAdminList-form-group label i {
            font-size: 12px;
        }

        .SubAdminList-input-wrapper {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .SubAdminList-password-wrapper {
            position: relative;
        }

        .SubAdminList-form-control {
            width: 100%;
            padding: 10px 12px;
            border-radius: 6px;
            border: 1px solid #dee2e6;
            font-size: 14px;
            transition: all 0.3s ease;
        }

        .SubAdminList-form-control:focus {
            outline: none;
            border-color: #3a56d4;
            box-shadow: 0 0 0 3px rgba(67, 97, 238, 0.15);
        }

        .SubAdminList-toggle-password {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: #6c757d;
            cursor: pointer;
        }

        .SubAdminList-save-btn {
            background-color: #2ecc71;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 5px;
            font-size: 13px;
        }

        .SubAdminList-save-btn:hover {
            background-color: #28b865;
        }

        .SubAdminList-save-btn i {
            font-size: 12px;
        }

        .SubAdminList-no-subadmins {
            text-align: center;
            color: #6c757d;
            padding: 30px;
            font-size: 16px;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 10px;
        }

        .SubAdminList-no-subadmins i {
            font-size: 36px;
            color: #4361ee;
            opacity: 0.7;
        }

        .SubAdminList-alert {
            position: fixed;
            top: 20px;
            right: 20px;
            padding: 12px 20px;
            border-radius: 8px;
            color: white;
            font-weight: 600;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            z-index: 1000;
            animation: SubAdminList-fadeIn 0.3s ease;
            display: flex;
            align-items: center;
            gap: 10px;
            font-size: 14px;
        }

        .SubAdminList-alert i {
            font-size: 16px;
        }

        .SubAdminList-alert-success {
            background-color: #2ecc71;
        }

        .SubAdminList-alert-error {
            background-color: #ef233c;
        }

        .SubAdminList-modal-overlay {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(0, 0, 0, 0.5);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 2000;
        }

        .SubAdminList-modal {
            background-color: white;
            border-radius: 10px;
            padding: 20px;
            max-width: 400px;
            width: 90%;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            animation: SubAdminList-modalFadeIn 0.3s ease-out;
        }

        @keyframes SubAdminList-modalFadeIn {
            from {
                opacity: 0;
                transform: translateY(-15px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .SubAdminList-modal-header {
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 15px;
            color: #212529;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .SubAdminList-modal-header i {
            color: #f4a261;
        }

        .SubAdminList-modal-body {
            margin-bottom: 20px;
            color: #495057;
            line-height: 1.5;
            font-size: 14px;
        }

        .SubAdminList-modal-footer {
            display: flex;
            justify-content: flex-end;
            gap: 10px;
        }

        .SubAdminList-modal-btn {
            padding: 8px 15px;
            border-radius: 6px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            border: none;
            font-size: 13px;
        }

        .SubAdminList-modal-btn-cancel {
            background-color: #eceff1;
            color: #495057;
        }

        .SubAdminList-modal-btn-cancel:hover {
            background-color: #e0e0e0;
        }

        .SubAdminList-modal-btn-confirm {
            background-color: #f4a261;
            color: white;
        }

        .SubAdminList-modal-btn-confirm:hover {
            background-color: #e89352;
        }

        /* Validation styles */
        .SubAdminList-input-error {
            color: #ef233c;
            font-size: 12px;
            margin-top: 5px;
            display: none;
        }

        .SubAdminList-form-control.error {
            border-color: #ef233c;
        }

        .SubAdminList-form-control.valid {
            border-color: #2ecc71;
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .SubAdminList-info {
                grid-template-columns: 1fr 1fr;
            }

            .SubAdminList-header {
                font-size: 20px;
            }

            .SubAdminList-card {
                padding: 15px;
            }
        }

        @media (max-width: 480px) {
            .SubAdminList-info {
                grid-template-columns: 1fr;
            }

            .SubAdminList-search-container {
                flex-direction: column;
            }

            .SubAdminList-actions button {
                padding: 8px;
                font-size: 11px;
            }

            .SubAdminList-modal-footer {
                flex-direction: column;
            }

            .SubAdminList-modal-btn {
                width: 100%;
            }
        }
    </style>
</head>

<body>
    <%- include('../Partials/AdminHeader') -%>
        <div class="SubAdminList-container">
            <div class="SubAdminList-search-container">
                <input type="text" id="SubAdminListSearchInput" class="SubAdminList-search-input"
                    placeholder="Search subadmins..." oninput="SubAdminListSearchSubAdmins()">
                <button class="SubAdminList-search-btn" onclick="SubAdminListSearchSubAdmins()">
                    <i class="fas fa-search"></i> Search
                </button>
            </div>

            <div id="SubAdminListListContainer" class="SubAdminList-list-container">
                <h2 class="SubAdminList-header">
                    <i class="fas fa-user-shield"></i> SubAdmin Management
                </h2>
                <div id="SubAdminListList">
                    <% if (subadmins && subadmins.length> 0) { %>
                        <% subadmins.forEach(subadmin=> { %>
                            <div class="SubAdminList-card" data-name="<%= subadmin.name.toLowerCase() %>"
                                data-username="<%= subadmin.username.toLowerCase() %>">
                                <div class="SubAdminList-info">
                                    <div class="SubAdminList-info-item">
                                        <span class="SubAdminList-info-label"><i class="fas fa-user"></i> Name:</span>
                                        <span class="SubAdminList-info-value">
                                            <%= subadmin.name %>
                                        </span>
                                    </div>
                                    <div class="SubAdminList-info-item">
                                        <span class="SubAdminList-info-label"><i class="fas fa-at"></i> Username:</span>
                                        <span class="SubAdminList-info-value">
                                            <%= subadmin.username %>
                                        </span>
                                    </div>
                                    <div class="SubAdminList-info-item">
                                        <span class="SubAdminList-info-label"><i class="fas fa-wallet"></i>
                                            Balance:</span>
                                        <span class="SubAdminList-info-value">
                                            <span class="SubAdminList-currency">
                                                <%= subadmin.balance %>
                                            </span> ብር
                                        </span>
                                    </div>
                                    <div class="SubAdminList-info-item">
                                        <span class="SubAdminList-info-label"><i class="fas fa-credit-card"></i>
                                            Credit:</span>
                                        <span class="SubAdminList-info-value">
                                            <span class="SubAdminList-currency">
                                                <%= subadmin.credit %>
                                            </span> ብር
                                        </span>
                                    </div>
                                    <div class="SubAdminList-info-item">
                                        <span class="SubAdminList-info-label"><i class="fas fa-power-off"></i>
                                            State:</span>
                                        <span class="SubAdminList-info-value">
                                            <span
                                                class="SubAdminList-state-badge <%= subadmin.state ? subadmin.state.toLowerCase() : 'none' %>">
                                                <i
                                                    class="fas fa-<%= subadmin.state === 'active' ? 'check-circle' : subadmin.state === 'suspended' ? 'pause-circle' : 'minus-circle' %>"></i>
                                                <%= subadmin.state || 'none' %>
                                            </span>
                                        </span>
                                    </div>
                                </div>

                                <div class="SubAdminList-actions">
                                    <button class="SubAdminList-edit-btn"
                                        onclick="SubAdminListToggleUpdateForm('<%= subadmin.uuid %>')">
                                        <i class="fas fa-edit"></i> Edit
                                    </button>
                                    <button class="SubAdminList-state-btn"
                                        onclick="SubAdminListShowStateModal('<%= subadmin.uuid %>', '<%= subadmin.state %>', '<%= subadmin.name %>')">
                                        <i class="fas fa-power-off"></i>
                                        <%= subadmin.state==='active' ? 'Suspend' : 'Activate' %>
                                    </button>
                                    <button class="SubAdminList-delete-btn"
                                        onclick="SubAdminListDeleteSubAdmin('<%= subadmin.uuid %>')">
                                        <i class="fas fa-trash-alt"></i> Delete
                                    </button>
                                </div>

                                <div class="SubAdminList-update-form" id="SubAdminListUpdateForm-<%= subadmin.uuid %>">
                                    <div class="SubAdminList-form-row">
                                        <div class="SubAdminList-form-group">
                                            <label for="SubAdminList-name-<%= subadmin.uuid %>">
                                                <i class="fas fa-user"></i> Name
                                            </label>
                                            <input type="text" id="SubAdminList-name-<%= subadmin.uuid %>"
                                                class="SubAdminList-form-control"
                                                placeholder="Enter name (min 7 characters, no special chars)"
                                                value="<%= subadmin.name %>"
                                                oninput="SubAdminListValidateInput('<%= subadmin.uuid %>', 'name')">
                                            <div class="SubAdminList-input-error"
                                                id="SubAdminList-name-error-<%= subadmin.uuid %>">
                                                Name must be at least 7 characters with no special characters
                                            </div>
                                            <button class="SubAdminList-save-btn"
                                                id="SubAdminListSaveBtn-name-<%= subadmin.uuid %>"
                                                onclick="SubAdminListUpdateSubAdmin('<%= subadmin.uuid %>', 'name')"
                                                disabled>
                                                <i class="fas fa-save"></i> Update
                                            </button>
                                        </div>

                                        <div class="SubAdminList-form-group">
                                            <label for="SubAdminList-username-<%= subadmin.uuid %>">
                                                <i class="fas fa-at"></i> Username
                                            </label>
                                            <input type="text" id="SubAdminList-username-<%= subadmin.uuid %>"
                                                class="SubAdminList-form-control"
                                                placeholder="Enter username (min 7 characters, no special chars)"
                                                value="<%= subadmin.username %>"
                                                oninput="SubAdminListValidateInput('<%= subadmin.uuid %>', 'username')">
                                            <div class="SubAdminList-input-error"
                                                id="SubAdminList-username-error-<%= subadmin.uuid %>">
                                                Username must be at least 7 characters with no special characters
                                            </div>
                                            <button class="SubAdminList-save-btn"
                                                id="SubAdminListSaveBtn-username-<%= subadmin.uuid %>"
                                                onclick="SubAdminListUpdateSubAdmin('<%= subadmin.uuid %>', 'username')"
                                                disabled>
                                                <i class="fas fa-save"></i> Update
                                            </button>
                                        </div>

                                        <div class="SubAdminList-form-group">
                                            <label for="SubAdminList-credit-<%= subadmin.uuid %>">
                                                <i class="fas fa-credit-card"></i> Credit
                                            </label>
                                            <input type="number" id="SubAdminList-credit-<%= subadmin.uuid %>"
                                                class="SubAdminList-form-control" placeholder="Enter credit amount"
                                                value="<%= subadmin.credit %>" min="0" step="0.01"
                                                oninput="SubAdminListValidateInput('<%= subadmin.uuid %>', 'credit')">
                                            <div class="SubAdminList-input-error"
                                                id="SubAdminList-credit-error-<%= subadmin.uuid %>">
                                                Credit must be a positive number
                                            </div>
                                            <button class="SubAdminList-save-btn"
                                                id="SubAdminListSaveBtn-credit-<%= subadmin.uuid %>"
                                                onclick="SubAdminListUpdateSubAdmin('<%= subadmin.uuid %>', 'credit')"
                                                disabled>
                                                <i class="fas fa-save"></i> Update
                                            </button>
                                        </div>

                                        <div class="SubAdminList-form-group">
                                            <label for="SubAdminList-password-<%= subadmin.uuid %>">
                                                <i class="fas fa-lock"></i> Password
                                            </label>
                                            <div class="SubAdminList-password-wrapper">
                                                <input type="password" id="SubAdminList-password-<%= subadmin.uuid %>"
                                                    class="SubAdminList-form-control"
                                                    placeholder="Enter password (min 8 chars, 1 uppercase, 1 lowercase, 1 number)"
                                                    oninput="SubAdminListValidateInput('<%= subadmin.uuid %>', 'password')">
                                                <button class="SubAdminList-toggle-password"
                                                    onclick="SubAdminListTogglePasswordVisibility('<%= subadmin.uuid %>')">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                            </div>
                                            <div class="SubAdminList-input-error"
                                                id="SubAdminList-password-error-<%= subadmin.uuid %>">
                                                Password must be at least 8 characters with 1 uppercase, 1 lowercase,
                                                and 1 number
                                            </div>
                                            <button class="SubAdminList-save-btn"
                                                id="SubAdminListSaveBtn-password-<%= subadmin.uuid %>"
                                                onclick="SubAdminListUpdateSubAdmin('<%= subadmin.uuid %>', 'password')"
                                                disabled>
                                                <i class="fas fa-save"></i> Update
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                                <% } else { %>
                                    <p class="SubAdminList-no-subadmins"><i class="fas fa-user-slash"></i> No subadmins
                                        found</p>
                                    <% } %>
                </div>
            </div>
        </div>

        <!-- State Confirmation Modal -->
        <div id="SubAdminListStateModal" class="SubAdminList-modal-overlay" style="display: none;">
            <div class="SubAdminList-modal">
                <div class="SubAdminList-modal-header">
                    <i class="fas fa-exclamation-triangle"></i>
                    <span id="SubAdminListModalTitle">Confirm Action</span>
                </div>
                <div class="SubAdminList-modal-body" id="SubAdminListModalMessage">
                    Are you sure you want to perform this action?
                </div>
                <div class="SubAdminList-modal-footer">
                    <button class="SubAdminList-modal-btn SubAdminList-modal-btn-cancel"
                        onclick="SubAdminListHideStateModal()">Cancel</button>
                    <button class="SubAdminList-modal-btn SubAdminList-modal-btn-confirm"
                        id="SubAdminListConfirmStateBtn">Confirm</button>
                </div>
            </div>
        </div>

        <script>
            // Search function
            function SubAdminListSearchSubAdmins() {
                const searchTerm = document.getElementById('SubAdminListSearchInput').value.toLowerCase().trim();
                const cards = document.querySelectorAll('.SubAdminList-card');

                cards.forEach(card => {
                    const name = card.getAttribute('data-name');
                    const username = card.getAttribute('data-username');

                    if (!searchTerm || name.includes(searchTerm) || username.includes(searchTerm)) {
                        card.style.display = 'block';
                    } else {
                        card.style.display = 'none';
                    }
                });
            }

            // Validate input fields with strict rules
            function SubAdminListValidateInput(uuid, field) {
                const input = document.getElementById(`SubAdminList-${field}-${uuid}`);
                const errorElement = document.getElementById(`SubAdminList-${field}-error-${uuid}`);
                const saveBtn = document.getElementById(`SubAdminListSaveBtn-${field}-${uuid}`);
                const value = input.value.trim();
                let isValid = false;

                // Reset styling
                input.classList.remove('error', 'valid');
                errorElement.style.display = 'none';

                if (field === 'password') {
                    // Password: min 8 chars, 1 uppercase, 1 lowercase, 1 number, no special chars
                    const passwordRegex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)[a-zA-Z\d]{8,}$/;
                    isValid = passwordRegex.test(value);
                    if (!isValid && value.length > 0) {
                        errorElement.style.display = 'block';
                        input.classList.add('error');
                    }
                } else if (field === 'credit') {
                    // Credit must be a valid positive number
                    const numValue = parseFloat(value);
                    isValid = !isNaN(numValue) && numValue >= 0;
                    if (!isValid && value.length > 0) {
                        errorElement.style.display = 'block';
                        input.classList.add('error');
                    }
                } else if (field === 'name' || field === 'username') {
                    // Name and username: min 7 chars, no special characters
                    const nameRegex = /^[a-zA-Z0-9]{7,}$/;
                    isValid = nameRegex.test(value);
                    if (!isValid && value.length > 0) {
                        errorElement.style.display = 'block';
                        input.classList.add('error');
                    }
                }

                if (isValid) {
                    input.classList.add('valid');
                }

                saveBtn.disabled = !isValid || value === '';
            }

            // Toggle update form visibility
            function SubAdminListToggleUpdateForm(uuid) {
                const form = document.getElementById(`SubAdminListUpdateForm-${uuid}`);
                form.classList.toggle('active');

                // Close other open forms
                document.querySelectorAll('.SubAdminList-update-form').forEach(f => {
                    if (f.id !== `SubAdminListUpdateForm-${uuid}`) {
                        f.classList.remove('active');
                    }
                });
            }

            // Toggle password visibility
            function SubAdminListTogglePasswordVisibility(uuid) {
                const passwordInput = document.getElementById(`SubAdminList-password-${uuid}`);
                const toggleBtn = passwordInput.nextElementSibling;

                if (passwordInput.type === 'password') {
                    passwordInput.type = 'text';
                    toggleBtn.innerHTML = '<i class="fas fa-eye-slash"></i>';
                } else {
                    passwordInput.type = 'password';
                    toggleBtn.innerHTML = '<i class="fas fa-eye"></i>';
                }
            }

            // Show state confirmation modal
            function SubAdminListShowStateModal(uuid, currentState, subadminName) {
                const newState = currentState === 'active' ? 'suspended' : 'active';
                const modal = document.getElementById('SubAdminListStateModal');
                const modalTitle = document.getElementById('SubAdminListModalTitle');
                const modalMessage = document.getElementById('SubAdminListModalMessage');
                const confirmBtn = document.getElementById('SubAdminListConfirmStateBtn');

                modalTitle.textContent = `${newState === 'active' ? 'Activate' : 'Suspend'} SubAdmin`;
                modalMessage.textContent = `Are you sure you want to ${newState === 'active' ? 'activate' : 'suspend'} subadmin ${subadminName}?`;

                confirmBtn.onclick = function () {
                    SubAdminListToggleSubAdminState(uuid, currentState);
                    SubAdminListHideStateModal();
                };

                modal.style.display = 'flex';
            }

            // Hide state confirmation modal
            function SubAdminListHideStateModal() {
                document.getElementById('SubAdminListStateModal').style.display = 'none';
            }

            // Toggle subadmin state
            async function SubAdminListToggleSubAdminState(uuid, currentState) {
                const newState = currentState === 'active' ? 'suspended' : 'active';

                try {
                    const response = await fetch(`/subadmin/${uuid}`, {
                        method: 'PUT',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ state: newState })
                    });

                    if (response.ok) {
                        SubAdminListShowAlert('success', `SubAdmin ${newState === 'active' ? 'activated' : 'suspended'} successfully`);
                        setTimeout(() => location.reload(), 1500);
                    } else {
                        const result = await response.json();
                        SubAdminListShowAlert('error', result.message || 'State update failed');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    SubAdminListShowAlert('error', 'An error occurred while updating state');
                }
            }

            // Update subadmin
            async function SubAdminListUpdateSubAdmin(uuid, field) {
                const inputElement = document.getElementById(`SubAdminList-${field}-${uuid}`);
                const saveBtn = document.getElementById(`SubAdminListSaveBtn-${field}-${uuid}`);
                let value = inputElement.value.trim();

                // Double-check validation
                SubAdminListValidateInput(uuid, field);
                if (saveBtn.disabled) return;

                // Disable button during request
                saveBtn.disabled = true;
                saveBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Updating...';

                try {
                    const res = await fetch(`/subadmin/${uuid}`, {
                        method: 'PUT',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ [field]: field === 'credit' ? parseFloat(value) : value }),
                    });

                    if (res.ok) {
                        SubAdminListShowAlert('success', 'SubAdmin updated successfully');
                        setTimeout(() => location.reload(), 1500);
                    } else {
                        const err = await res.json();
                        SubAdminListShowAlert('error', err.error || "Update failed");
                        saveBtn.disabled = false;
                        saveBtn.innerHTML = '<i class="fas fa-save"></i> Update';
                    }
                } catch (error) {
                    SubAdminListShowAlert('error', 'Network error. Please try again.');
                    saveBtn.disabled = false;
                    saveBtn.innerHTML = '<i class="fas fa-save"></i> Update';
                }
            }

            // Delete subadmin
            async function SubAdminListDeleteSubAdmin(uuid) {
                if (!confirm("Are you sure you want to delete this subadmin? This action cannot be undone.")) return;

                try {
                    const res = await fetch(`/subadmin/${uuid}`, { method: 'DELETE' });

                    if (res.ok) {
                        SubAdminListShowAlert('success', 'SubAdmin deleted successfully');
                        setTimeout(() => location.reload(), 1500);
                    } else {
                        const err = await res.json();
                        SubAdminListShowAlert('error', err.error || "Delete failed");
                    }
                } catch (error) {
                    SubAdminListShowAlert('error', 'Network error. Please try again.');
                }
            }

            // Show alert message
            function SubAdminListShowAlert(type, message) {
                const existingAlert = document.querySelector('.SubAdminList-alert');
                if (existingAlert) existingAlert.remove();

                const alertDiv = document.createElement('div');
                alertDiv.className = `SubAdminList-alert SubAdminList-alert-${type}`;
                alertDiv.innerHTML = `
                <i class="fas ${type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle'}"></i>
                ${message}
            `;

                document.body.appendChild(alertDiv);

                setTimeout(() => {
                    alertDiv.style.opacity = '0';
                    setTimeout(() => alertDiv.remove(), 300);
                }, 3000);
            }

            // Initialize validation
            document.addEventListener('DOMContentLoaded', function () {
                document.querySelectorAll('[id^="SubAdminList-"]').forEach(input => {
                    if (input.id.includes('-password-')) {
                        const uuid = input.id.split('-')[3];
                        SubAdminListValidateInput(uuid, 'password');
                    } else if (input.id.includes('-name-') || input.id.includes('-username-') || input.id.includes('-credit-')) {
                        const parts = input.id.split('-');
                        const field = parts[1];
                        const uuid = parts[3];
                        SubAdminListValidateInput(uuid, field);
                    }
                });
            });
        </script>
</body>

